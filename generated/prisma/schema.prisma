generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  cvs   Cv[]
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
  cvs  Cv[]   @relation("SkillCv")
}

model Cv {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  job       String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  skills    Skill[]  @relation("SkillCv")
  createdAt DateTime @default(now())
}
